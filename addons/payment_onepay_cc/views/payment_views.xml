<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="acquirer_form_onepay_cc" model="ir.ui.view">
            <field name="name">acquirer.form.onepay_cc</field>
            <field name="model">payment.acquirer</field>
            <field name="inherit_id" ref="payment.acquirer_form"/>
            <field name="arch" type="xml">
                <xpath expr='//group[@name="acquirer"]' position='inside'>
                    <group attrs="{'invisible': [('provider', '!=', 'onepay_cc')]}">
                        <field name="onepay_cc_email_account" attrs="{'required':[ ('provider', '=', 'onepay_cc'), ('state', '!=', 'disabled')]}"/>
                        <field name="onepay_cc_seller_account"/>
                        <field name="onepay_cc_access_code"/>
                        <field name="onepay_cc_secret_hash"/>
                        <field name="onepay_cc_use_ipn" attrs="{'required':[ ('provider', '=', 'onepay_cc'), ('state', '!=', 'disabled')]}"/>
                        <a colspan="2" href="https://www.odoo.com/documentation/14.0/applications/general/payment_acquirers/onepay_cc.html" target="_blank">How to configure your onepay_cc account?</a>
                    </group>
                </xpath>
            </field>
        </record>

        <record id="transaction_form_onepay_cc" model="ir.ui.view">
            <field name="name">acquirer.transaction.form.onepay_cc</field>
            <field name="model">payment.transaction</field>
            <field name="inherit_id" ref="payment.transaction_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='acquirer_reference']" position="after">
                    <field name="onepay_cc_txn_type" readonly="1" attrs="{'invisible': [('provider', '!=', 'onepay_cc')]}"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
