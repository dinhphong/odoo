<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <template id="onepay_form">
            <input type="hidden" name="data_set" t-att-data-action-url="tx_url" data-remove-me=""/>
            <input type="hidden" name="vpc_MerchTxnRef" t-att-value="vpc_MerchTxnRef"/>
            <input type="hidden" name="vpc_Amount" t-att-value="vpc_Amount"/>
            <input type="hidden" name="vpc_CurrencyCode" t-att-value="vpc_CurrencyCode"/>
            <input type="hidden" name="shipBeforeDate" t-att-value="shipBeforeDate"/>
            <input type="hidden" name="vpc_AccessCode" t-att-value="vpc_AccessCode"/>
            <input type="hidden" name="vpc_Merchant" t-att-value="vpc_Merchant"/>
            <input type="hidden" name="vpc_Locale" t-att-value="vpc_Locale"/>
            <input type="hidden" name="sessionValidity" t-att-value="sessionValidity"/>
            <input type="hidden" name="vpc_SecureHash" t-att-value="vpc_SecureHash"/>
            <!-- URLs -->
            <input type="hidden" name='resURL'
                t-att-value="resURL"/>
            <!-- custom -->
            <input t-if="merchantReturnData" type="hidden" name='merchantReturnData'
                t-att-value="merchantReturnData"/>
            <!-- shopperEmail is not included for SHA-1. To avoid breaking compatibility,
                    include only if filled in -->
            <input t-if="shopperEmail"
                type="hidden" name='shopperEmail' t-att-value="shopperEmail"/>
        </template>
    </data>
</odoo>
